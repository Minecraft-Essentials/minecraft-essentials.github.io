---
import Tabs from "./Tabs.astro";
import { TabItem } from "@astrojs/starlight/components";

interface Props {
	js?: boolean;
}
const { js } = Astro.props;
---

<Tabs group="package-managers">
	{
		js && (
			<>
				<TabItem label="Deno">
					<slot name="deno" />
				</TabItem>
				<TabItem label="Bun">
					<slot name="bun" />
				</TabItem>
				<TabItem label="Yarn">
					<slot name="yarn" />
				</TabItem>
				<TabItem label="pnpm">
					<slot name="pnpm" />
				</TabItem>
				<TabItem label="npm">
					<slot name="npm" />
				</TabItem>
			</>
		)
	}
</Tabs>
